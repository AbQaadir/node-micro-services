  "item": [
    {
      "name": "1. Create a New User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// This script runs after the request is complete.",
              "// It gets the user ID from the response body and saves it",
              "// as a collection variable, so other requests can use it.",
              "const response = pm.response.json();",
              "if (response && response.user && response.user._id) {",
              "    pm.collectionVariables.set(\"userId\", response.user._id);",
              "    console.log(\"User ID set to: \", pm.collectionVariables.get(\"userId\"));",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser_jane\",\n    \"email\": \"jane.doe@example.com\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/users",
          "protocol": "http",
          "host": ["localhost"],
